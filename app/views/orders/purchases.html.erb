<div class="main">
  <h2>Your Purchase History</h2>
</div>

<table class="table table-striped table-bordered">
  <tr>
    <th class="main">Item</th>
    <th class="main">Name</th>
    <th class="main">Price</th>
    <th class="main">Seller</th>
    <th class="main">Date Purchased</th>
  </tr>

  <% @orders.each do |order| %>
    <tr>
      <td><%= image_tag order.listing.image.url(:thumb) %></td>
      <td><%= order.listing.name %></td>
      <td><%= number_to_currency(order.listing.price) %></td>
      <td><%= order.seller.name %></td>
      <td><%= order.created_at.strftime("%B %-d, %Y") %></td>
      <td>
          <div class="btn-group">
            <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
              Listing Action <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to "View", listing, class: "btn btn-link" %></li>
              <li><%= link_to "Edit", edit_listing_path(listing), class: "btn btn-link" %></li>
              <li><%= link_to 'Destroy', listing, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-link" %></li>
            </ul>
          </div>
        </td>
    </tr>
  <% end %>
</table>

<br>
